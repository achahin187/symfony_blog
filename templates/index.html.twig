{% extends 'base.html.twig' %}



{% block body %}

<div class="container">

<div class="row-mt-8">

<div class="col-md-6 mx-auto">
{% for message in app.flashes('notice') %}

<div class="alert alert-success">{{message}}</div>


{% endfor %}
<div class="card bg-light rounded">
<div class="card-title text-default p-4">
Articles | <a href="{{path('post_add')}}">Add new Post <span class="text-succes"><span></a> 


</div>

<div class="card-body mt-2 rounded">
{% for post in posts %}
   <div class="media">
      <img src="http://picsum.photos/100/100" class="mr-3 rounded">

   <div class="media-body">
   <h5 class="mt-0">
   <a href="{{path('blog_show',{'id':post.id})}}"> {{ post.title }}  </a>
   </h5>
   {{ post.body }}

   <a href="{{path('blog_edit',{'id':post.id})}}" class="btn btn-outline-warning btn-sm float-right mr-2">  Edit   </a>
      <a href="{{path('blog_delete',{'id':post.id})}}" class="btn btn-outline-danger btn-sm float-right mr-2">  Delete   </a>

   </div>
   
   </div>
<hr>

{% endfor %}
</div>
</div>

</div>

</div

</div>

{% endblock %}